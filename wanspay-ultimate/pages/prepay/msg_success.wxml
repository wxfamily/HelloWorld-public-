<view class="page">
  <view class="weui-msg">
    <view class="weui-msg__icon-area">
      <icon type="success" size="93"></icon>
    </view>
    <form bindsubmit="submitInfo" report-submit='true'>
      <view class="weui-msg__text-area">
        <view class="weui-msg__title">支付成功</view>
        <view class="weui-msg__desc">收款商户：{{merchant}}</view>
        <view class="weui-msg__desc" style='color:black;font-size:30px'>￥{{amount}}</view>
      </view>

      <view class="weui-msg__opr-area">
        <view class="weui-btn-area">
          <button form-type="submit" class="weui-btn" type="primary" bindtap="paySuccessButton" >确认</button>
        </view>
      </view>
    </form>
    <view class="weui-msg__extra-area">
      <view class="weui-footer">
        <view class="weui-footer__links">
          <navigator url="" class="weui-footer__link">万商支付</navigator>
        </view>
        <view class="weui-footer__text">Copyright © 2018 wanspay</view>
      </view>
    </view>
  </view>
</view>