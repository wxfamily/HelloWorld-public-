    <view class="weui-tabbar__label" style="font-size: 12px;color:white;text-align:center">卡包</view>
  </view>

</view>

<view style='background-color:#E8E8E8;height:8px;display:flex'></view>

<view class="page" style="background: #FFFFFF">
   
        <view class="weui-grids">
                    <navigator url="/pages/video/videolist" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="http://bus.sanppay.com/wanshang-web-protal/RES/images/newIndex/vedioCharge.png" />
                    <view class="weui-grid__label">视频充值</view>
                </navigator>
                    <navigator url="/pages/game/gamelist" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="http://bus.sanppay.com/wanshang-web-protal/RES/images/newIndex/gameCharge.png" />
                    <view class="weui-grid__label">游戏充值</view>
                </navigator>
        </view>
</view>


